{% extends 'base.html.twig' %}

{% block title %}MyWall{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 60%; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    h3{
        text-align: center;
    }
    form{
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid black;
        padding: 20px;
        box-shadow: 5px 5px 15px black;
        background-color: antiquewhite;
    }
    form button{
        margin: 20px auto;
    }
    .labelImg{
    margin-top: 20px;
    }
</style>

<div class="example-wrapper body-crearPublicacion">
    
    <h3>Crea una nueva publicacion</h3>
    
    {% for mensaje in app.flashes('mensaje') %}
        {{ mensaje}}
    {% endfor %}
    
    {# asi creas el formularios netero #}
    {# {{ form(form) }} #}

    {# asi lo que quieras del formulario #}
    {{ form_start(form) }}
        {{ 'Titulo' }}
        {{ form_widget(form.titulo) }}
        {{ 'Contenido' }}
        {{ form_widget(form.contenido) }}
        <p class="labelImg">seleccione una imagen (opcional)</p>
        {{ form_widget(form.imagenPath) }}
    {{ form_end(form) }}
    
    
</div>
{% endblock %}
